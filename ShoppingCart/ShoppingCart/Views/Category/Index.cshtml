@model List<Category>
<div class="container">
	<div class="row">
		<div class="col-6"><h1>Category</h1></div>
		<div class="col-6 text-end "><a class="btn btn-primary" asp-controller="Category" asp-action="Create">New Category</a></div>

	</div>
</div>
<table class="table table-striped">
	<thead class="thead-dark">
		<tr>
			<th scope="col">Name</th>
			<th scope="col">Display Order</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.DisplayOrder</td>
			</tr>
		}
	</tbody>
</table>
