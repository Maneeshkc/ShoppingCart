@model List<Category>
<div class="container">
	<div class="row">
		<div class="col-6"><h1>Category</h1></div>
		<div class="col-6 text-end "><a class="btn btn-primary" asp-controller="Category" asp-action="Create">New Category</a></div>

	</div>
</div>
<table class="table table-striped">
	<thead class="thead-dark">
		<tr>
			<th scope="col">Name</th>
			<th scope="col">Display Order</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.DisplayOrder</td>
				<td class="text-end col-4">
					<a class="btn btn-info rounded" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">
						<svg  class="pe-lg-1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
							<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
						</svg> Edit
					</a>

					<a class="btn btn-danger rounded" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
						<svg class="pe-lg-1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
							<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
						</svg> Delete
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<partial name="_notification" />
