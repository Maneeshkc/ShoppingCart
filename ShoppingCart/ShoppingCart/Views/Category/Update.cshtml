@model Category

<form method="post">
	<div class="boarder p-3">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group pb-4 pt-5">
			<label asp-for="Name">Category Name</label>
			<input asp-for="Name" class="form-control" aria-describedby="emailHelp" placeholder="Category Name">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group pb-4">
			<label asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" class="form-control" placeholder="Display Order">
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>

		</div>
		<div class="row">
			<div class="col-6">
				<button type="submit" style="width:100%" class="btn btn-primary btn-block">Update</button>
			</div>
			<div class="col-6"><a style="width:100%" class="btn btn-secondary btn-outline-info" asp-controller="Category" asp-action="Index">Cancel</a></div>
		</div>
	</div>
</form>
@section Scripts
{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

